<ul class="users-list">
<% @users.each do |user| %>
  <li class="user-card">
    <div class="card-img">
      <%= image_tag("user-img-placeholder.png") %>
    </div>
    <div class="card-content">
      <h4>
        <%= user.name %>
      </h4>
      <span class="posts-counter">
      2
        Posts: <%= user.posts_counter %>
      </span>
    </div>
  </li>
<% end %>
</ul>

